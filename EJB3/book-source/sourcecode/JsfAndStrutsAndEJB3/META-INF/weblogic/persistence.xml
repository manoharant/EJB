<?xml version="1.0"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
  <persistence-unit name="foshanshop" transaction-type="JTA">
     <properties>
      <property name="kodo.ConnectionURL" value="jdbc:mysql://localhost:3306/foshanshop?useUnicode=true&amp;characterEncoding=GBK"/>
      <property name="kodo.ConnectionDriverName" value="org.gjt.mm.mysql.Driver"/>
      <property name="kodo.ConnectionUserName" value="root"/>
      <property name="kodo.ConnectionPassword" value="123456"/>
      <property name="kodo.jdbc.SynchronizeMappings" value="refresh"/>
     </properties>
  </persistence-unit>
</persistence>